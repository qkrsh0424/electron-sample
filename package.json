{
    "name": "sample1",
    "version": "1.0.0",
    "description": "Electron sample1",
    "main": "./src/main.js",
    "scripts": {
        "start": "electron-forge start",
        "test": "echo \"Error: no test specified\" && exit 1",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "deploy:xos": "electron-builder --mac",
        "deploy:win32": "electron-builder --win --ia32",
        "deploy:win64": "electron-builder --win --x64"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@electron-forge/cli": "^7.4.0",
        "@electron-forge/maker-deb": "^7.4.0",
        "@electron-forge/maker-rpm": "^7.4.0",
        "@electron-forge/maker-squirrel": "^7.4.0",
        "@electron-forge/maker-zip": "^7.4.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
        "@electron-forge/plugin-fuses": "^7.4.0",
        "@electron/fuses": "^1.8.0",
        "electron": "^31.1.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.1",
        "exceljs": "^4.4.0",
        "puppeteer": "^22.12.1",
        "xlsx": "^0.18.5"
    },
    "build": {
        "productName": "NB",
        "appId": "com.nb.electron",
        "asar": true,
        "mac": {
            "target": [
                "default"
            ]
        },
        "dmg": {
            "title": "NB"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "perMachine": true,
            "language": 1042,
            "shortcutName": "NB",
            "artifactName": "NB-${version}.${ext}",
            "uninstallDisplayName": "NB"
        },
        "directories": {
            "output": "./dist/"
        }
    }
}
